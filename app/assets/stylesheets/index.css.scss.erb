/* -- custom css for Bootstrap 3.x --*/

/* move special fonts to HTML head for better performance */
@import url(http://fonts.googleapis.com/css?family=Voltaire);
@import "font-awesome";

html,
body {
  height: 100%;
  width: 100%;
  font-family:Arial,sans-serif;
}

/* fix bs3 horizontal scrollbar bug */
.row { margin: 0; padding: 0 }

.video-bg {
  position: fixed;
  top: 0; right: 0; bottom: 0; left: 0;
  overflow: hidden;
  z-index: -20;
}
.video-bg > video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
/* 1. No object-fit support: */
@media (min-aspect-ratio: 16/9) {
  .video-bg > video { height: 300%; top: -100%; }
}
@media (max-aspect-ratio: 16/9) {
  .video-bg > video { width: 300%; left: -100%; }
}
/* 2. If supporting object-fit, overriding (1): */
@supports (object-fit: cover) {
  .video-bg > video {
    top: 0; left: 0;
    width: 100%; height: 100%;
    object-fit: cover;
  }
}

video::-webkit-media-controls {
  display:none !important;
}

/* use special fonts in certain elements */
h1,h2,h3,h4,.lead,.btn,.navbar a {
  text-transform:uppercase;
  font-family:'Voltaire',Arial,sans-serif;
  letter-spacing:2px;
}

h1 {
  font-size:50px;
}

.pkut-main {
  width: 70vw;
  margin-top: 10vh;
}

.icon-bar {
  background-color:#fff;
}

.vert {
  vertical-align: middle;
  width:100%;
  padding:4% 0;
  text-align:center;
}

.header-container {
  min-height: 100%;
  min-width: 100%;
  height: auto;
  width: auto;
  background-image: url('<%= asset_path("check-background.png") %>');
  transform: translateZ(0);
}

.header .btn-lg {
  width: 170px;
  margin: 10px;
  font-size:28px;
  border-color:#eee;
  padding:15px;
  background-color:transparent;
  color:#fff;
}

.container > h1 {
  color: red;
}

.header .btn-lg:hover {
  background-color:#eeeeee;
  color:#777777;
}

.navbar {
  transition: 1s;
}

.navbar a {
  color: #001;
  text-shadow: 1px -2px #FFF;
  font-size: 16px;
}

.navbar.affix {
  color: #F00;
  background-color: #EEE;
}
.navbar-offset { height: 51px; }

.navbar {
  font-family:'Helvetica Neue',Helvetica,Arial,sans-serif;
}

.navbar li a:hover, .navbar li.active {
  color: #00F;
}

.header h1 {
  font-size: 80px;
  color: #fff;
  margin-left: -5px;
  margin-bottom: 5px;
  text-transform: uppercase;
}

.header .lead {
  color: #d46054;
  font-size: 25px;
}

.header {
  height: 100%;

}

.blurb {
  padding: 120px 0;
  background-color:#fefefe;
}

.blurb .panel {
  background-color:transparent;
}

.bright {
  background: #dbdbdb url('http://www.bootply.com/assets/example/pt_topo.png') repeat center center;
  color:#777;
  z-index: 1;
}

.featurette {
  background: #222334;
  padding: 50px 0;
  color: #ffffff;
}

.featurette-item {
  margin-bottom: 15px;
}

.featurette-item > i {
  border: 3px solid #ffffff;
  border-radius: 50%;
  display: inline-block;
  font-size: 56px;
  width: 140px;
  height: 140px;
  line-height: 136px;
  vertical-align: middle;
  text-align: center;
}

.featurette-item > i:hover {
  font-size: 68px;
}

.callout-container {
  min-height: 100%;
  min-width: 100%;
  background: url('<%= asset_path("concrete-1.jpg") %>');
}
.callout {
  color: #ffffff;
  min-height: 500px;
  padding-bottom: 50px;
  min-height: 100%;
  min-width: 100%;
  position: relative;
  background-image: url('<%= asset_path("check-background.png") %>');
}


.gallery {
  padding: 50px 0;
  background: rgba(220, 220, 220, 0.7);
}

footer {
  padding: 50px 0;
  background: black;
  color: white;
}

/* -- end custom css for Bootstrap 3.x --*/
