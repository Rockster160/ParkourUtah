/* -- custom css for Bootstrap 3.x --*/

/* move special fonts to HTML head for better performance */
@import url(http://fonts.googleapis.com/css?family=Voltaire);

html,
body {
  max-width: 100%;
  overflow-x: hidden;
  // height: 100%;
  width: 100%;
  font-family:Arial,sans-serif;
}

/* fix bs3 horizontal scrollbar bug */
.row { margin: 0; padding: 0 }

/* use special fonts in certain elements */
h1,h2,h3,h4,.lead,.btn,.navbar a {
  text-transform:uppercase;
  font-family:'Voltaire',Arial,sans-serif;
  letter-spacing:2px;
}

h1 {
  font-size:50px;
}

.delayed-load {
  display: none;
}

.pkut-main {
  width: 70vw;
  margin-top: 10vh;
}

.icon-bar {
  background-color: red;
}

.vert {
  vertical-align: middle;
  width:100%;
  padding:4% 0;
  text-align:center;
}

.header-container {
  min-height: 100vh;
  min-width: 100vw;
  max-height: 100vh;
  max-width: 100vw;
  height: auto;
  width: auto;
  background-image: url('//s3-us-west-2.amazonaws.com/pkut-default/check-background.png');
  transform: translateZ(0);
}

.header .btn-lg {
  width: 150px;
  margin: 10px;
  font-size:24px;
  border-color:#eee;
  padding:15px;
  background-color:transparent;
  color:#fff;
}

.call-to-arms {
  right: 20px;
  top: 40%;
  background-color: transparent;
  color: orange;
  border-color: orange;
  width: 170px;
  font-size: 2em;
  &:hover {
    background-color: orange;
    color: white;
  }
}

.container > h1 {
  color: red;
}

.header .btn-lg:hover {
  background-color:#eeeeee;
  color:#777777;
}

.navbar {
  transition: 1s;
}

.navbar a {
  color: #F00;
  text-shadow: 0 0 10px #000;
  font-size: 16px;
}

.nav-icon {
  position: absolute;
  right: 17px;
  top: 17px;
}

.navbar.affix {
  color: #F00;
  background-color: #EEE;
}
.navbar-offset { height: 51px; }

.navbar {
  font-family:'Helvetica Neue',Helvetica,Arial,sans-serif;
}

.navbar li a:hover, .navbar li.active {
  color: #00F;
}

.header h1 {
  font-size: 80px;
  color: #fff;
  margin-left: -5px;
  margin-bottom: 5px;
  text-transform: uppercase;
}

.header .lead {
  color: #d46054;
  font-size: 25px;
}

.header {
  height: 100vw;
}

.blurb {
  padding: 120px 0;
  background-color:#fefefe;
}

.blurb .panel {
  background-color:transparent;
}

.bright {
  background: #dbdbdb url('http://www.bootply.com/assets/example/pt_topo.png') repeat center center;
  color:#777;
  z-index: 1;
}

.featurette {
  background: #222334;
  padding: 50px 0;
  color: #ffffff;
}

.featurette-item {
  margin-bottom: 15px;
}

.featurette-item > i {
  border: 3px solid #ffffff;
  border-radius: 50%;
  display: inline-block;
  font-size: 56px;
  width: 140px;
  height: 140px;
  line-height: 136px;
  vertical-align: middle;
  text-align: center;
}

.featurette-item > i:hover {
  font-size: 68px;
}
.callout-background {
  min-height: 100%;
  min-width: 100%;
  max-width: 100%;
  background: gray;
  transition: 2s;
}
.callout-container {
  min-height: 100%;
  min-width: 100%;
  max-width: 100%;
  background-image: image-url("concrete-small.png");
  background-size: cover;
}
.callout {
  color: #ffffff;
  min-height: 500px;
  padding-bottom: 50px;
  min-height: 100%;
  min-width: 100%;
  position: relative;
  background-image: url('//s3-us-west-2.amazonaws.com/pkut-default/check-background.png');
}

.gallery {
  padding: 50px 0;
  background: rgba(220, 220, 220, 0.7);
}

footer {
  padding: 50px 0;
  background: black;
  color: white;
}

@media (max-width: 900px) {
  .header .btn-lg {
    width: 100px;
    margin: 10px;
    font-size:12px;
    padding:15px;
  }
}

@media (min-width: 768px) {
  .modal-dialog { width: 400px; }
}

/* -- end custom css for Bootstrap 3.x --*/
