<div class="central-container form-offset">
  <%= link_to "Back to Dashboard", dashboard_path, class: 'pkut-btn' %><br/><br/>
  Users: <%= @users.count %>
  <% @users.each do |user| %>
    <% if user.stripe_subscription? %>
      <h3 style="color: green;"><%= user.id %>: <%= user.email %>*</h3>
    <% else %>
      <h3><%= user.id %>: <%= user.email %></h3>
    <% end %>
    <p><strong><%= user.show_phone_number %></strong></p>
    <p>Credits: <%= user.credits %> -- <a data-toggle="modal" data-target="#adjust-<%= user.id %>" class="forceOpen">Adjust</a></p>
    <p>Last seen:
      <% if user.signed_in? %>
        <span style="color:green;">Online Now!</span>
      <% else %>
        <% if user.last_sign_in_at? %>
          <span style="color:yellow;"><%= (user.last_sign_in_at - 6.hours).strftime('%B %e, %Y at %I:%M %p') %></span>
        <% else %>
          <span style="color:red;">Never</span>
        <% end %>
      <% end %>
    </p>
    <p>Signed up: <strong><%= (user.created_at - 6.hours).strftime('%B %e, %Y at %I:%M %p') %></strong></p>
    <a data-toggle="modal" data-target="#delete-<%= user.id %>" class="pkut-btn forceOpen">Delete User</a>
    <h4>Athletes:</h4>
    <% user.athletes_by_waiver_expiration.each do |athlete| %>
      <% if athlete.has_unlimited_access? %>
        <span style='color: green;'>--<%= athlete.id %>: <strong><%= athlete.full_name %></strong> - ID: <%= athlete.zero_padded(athlete.athlete_id, 4) %>*</span><br/>
      <% else %>
        --<%= athlete.id %>: <strong><%= athlete.full_name %></strong> - ID: <%= athlete.zero_padded(athlete.athlete_id, 4) %><br/>
      <% end %>
      --<a alt="..." class="pkut-header forceOpen" data-toggle="modal" data-target="#edit<%= athlete.id %>">Delete Athlete</a><br/>
      <div class="modal fade" id="edit<%= athlete.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="central-container">
          <div class="error-container center-block">
            <button type="button" class="close-btn error-close" data-dismiss="modal" aria-hidden="true"><%= icon("times-circle-o", '', class: 'fa-2x') %></button>
            <h3 class="pkut-header"><%= athlete.full_name %></h3>
              <p>This will permanently delete this athlete. Are you sure? This action cannot be undone.<p>
              <%= link_to "Delete", destroy_athlete_path(athlete.id), class: 'pkut-btn', method: :delete %>
          </div>
        </div>
      </div>
      --Birthday: <%= athlete.date_of_birth %><br/>
      --Waiver expires: <%= athlete.waiver ? athlete.waiver.exp_date.strftime('%B %e, %Y') : "No waiver signed" %><br/><br/>
    <% end %>
    <hr>
    <%= render partial: 'destroy_user', locals: {user: user} %>
    <%= render partial: 'adjust_credits', locals: {user: user} %>
  <% end %>
</div>
