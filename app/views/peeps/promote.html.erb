<div class="fancy-box central-container form-offset">
  <h4><%= link_to "Back to Dashboard", dashboard_path, class: 'fancy-btn' %></h4><br/><br/>
  <%= form_for @instructor, url: promotion_path do |f| %>
    <%= f.label :email, "Enter an existing users email or a new account will be created for them." %><br/>
    <%= f.text_field :email, placeholder: 'justin@parkourutah.com', class: 'fancy-textbox' %><br/>
    <%= f.label :first_name %><br/>
    <%= f.text_field :first_name, placeholder: 'Justin', class: 'fancy-textbox' %><br/>
    <%= f.label :last_name %><br/>
    <%= f.text_field :last_name, placeholder: 'Spencer', class: 'fancy-textbox' %><br/>
    <%= f.label :nickname %>(Optional)<br/>
    <%= f.text_field :nickname, placeholder: 'Captain Awesome', class: 'fancy-textbox' %><br/>
    <%= f.label :title %><br/>
    <%= f.text_field :title, placeholder: 'Instructor', class: 'fancy-textbox' %><br/>
    <%= f.label :stats %><br/>
    <%= f.text_field :stats, placeholder: '5\'10" 180 lbs', class: 'fancy-textbox' %><br/>
    <%= f.label :payment_multiplier, 'How much paid per student?' %><br/>
    <%= f.text_field :payment_multiplier, class: 'fancy-textbox restrictNumeric' %><br/>
    <%= f.label :bio %><br/>
    <%= f.text_area :bio, rows: '12', maxlength: '550', class: 'fancy-textarea restrictBio' %><br/>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
    <%= f.label :avatar_2 %>
    <%= f.file_field :avatar_2 %>
    <%= f.submit "Submit", class: 'btn btn-success' %>
  <% end %>
  <br/>
</div>
