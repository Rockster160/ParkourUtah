<div class="modal fade" id="verify_athletes" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="central-container">
    <div class="error-container center-block">
      <button type="button" class="close-btn error-close" data-dismiss="modal" aria-hidden="true"><%= icon("times-circle-o", '', class: 'fa-2x') %></button>
      <h1 class="pkut-header">Verify</h1>
      <p>We have sent you an email containing vital information about your attendance to classes. Please check your email and enter these details below to receive your 2 free classes.</p>
      <%= form_tag verify_athletes_path do %>
        <% current_user.non_verified_athletes.each do |athlete| %>
          <div class="row"><%= athlete.full_name %></div>
          <div class="row athlete-input-info">
            <div class="col-xs-6"><%= telephone_field_tag "athlete[#{athlete.id}][athlete_id]", '', placeholder: 'ID', class: 'pkut-textbox sm-textbox formatPin ', autocomplete: 'off', style: 'padding-top: 0;' %></div>
            <div class="col-xs-6"><%= telephone_field_tag "athlete[#{athlete.id}][athlete_pin]", '', placeholder: 'PIN', class: 'pkut-textbox formatPin sm-textbox', autocomplete: 'off', style: 'padding-top: 0;' %></div>
          </div>
        <% end %>
        <%= submit_tag 'Submit', class: 'pkut-btn' %>
      <% end %>
    </div>
  </div>
</div>

