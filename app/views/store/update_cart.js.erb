killFlashes();
$('body').prepend('<%= j render "layouts/flashes" %>');
$('.shopping-cart-total-holder').html('<%= j number_to_currency(@cart.price) %>')
$('.shopping-cart-line-item-quantity-input').each(function(){
  var $container = $(this).parents('.shopping-cart-cell');
  if ($(this).val() == "0" && $($container).is(":visible")) {
    $container.slideUp(500);
  }
  if ($(this).val() != "0" && !($($container).is(":visible"))) {
    $container.slideDown(500);
  }
});
<% if @order %>
  $('.orders-placeholder').append('<%= j render partial: "shopping_cart_item", locals: {order: @order} %>');
<% end %>
