<div class="fancy-box central-container form-offset">
  <h4><%= link_to "Back to Dashboard", dashboard_path, class: 'fancy-btn' %></h4><br/><br/>
  <%= form_for @item, url: {action: "create"} do |f| %>
    <table>
      <div class="field">
        Title<br/>
        <%= f.text_field :title, placeholder: 'Green Parachute Pants', required: true, class: 'pkut-textbox' %>
      </div>
      <div class="field">
        Cost<br/>
        <%= f.number_field :cost, placeholder: '3000.99', required: true, class: 'pkut-textbox' %>
      </div>
      <!-- <div class="field">
        Sizes, comma separated
        <%#= f.text_field :size, placeholder: 'S, M, L / 38.5, 39, 43', required: true, class: 'pkut-textbox' %>
      </div> -->
      <div class="field">
        Description<br/>
        <%= f.text_area :description, placeholder: 'Marvelous skills sewn with godly thread.', required: true, class: 'fancy-textarea' %>
      </div>
      <div class="field">
        Class or Physical Item<br/>
        <%= f.select :category, @categories, class: 'pkut-textbox' %>
      </div>
      <div class="field">
        Hidden? (Hidden items are only purchasable with a redemption key)<br/>
        <%= f.check_box :hidden %>
      </div>
      <div class="field">
        Credits given to user after purchase (1 class = 12)<br/>
        <%= f.text_field :credits, class: 'pkut-textbox restrictNumeric' %>
      </div>
      <div class="field">
        Display image<br/>
        <%= f.file_field :display %>
      </div>
    </table>
    <%= submit_tag "Submit", class: "btn btn-success" %>
  <% end %>
</div>
