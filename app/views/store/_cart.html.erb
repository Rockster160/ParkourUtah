<div class="shopping-cart-container">
  <div class="shopping-cart">
    <div class="orders-placeholder">
      <% @cart.transactions.where("amount > ?", 0).each do |order| %>
        <%= render partial: 'shopping_cart_item', locals: {order: order} %>
      <% end %>
    </div>
    <br/>
    <span class="shopping-cart-total">Total: <span class="shopping-cart-total-holder"><%= number_to_currency(@cart.price) %></span></span>
    <%= link_to "Purchase Cart", purchase_path, method: :post, data: {confirm: "Are you sure? \nThis will charge your account #{number_to_currency(@cart.price)}."} %>
  </div>
</div>
