<%= form_for @item, url: {action: "update", id: @item.id} do |f| %>
<%= f.text_field :title, placeholder: 'Title', required: true, autocomplete: "off" %><br/>
<%= f.number_field :cost, placeholder: 'Cost', required: true, autocomplete: "off", step: 0.01 %><br/>
<%= f.text_area :description, placeholder: 'Description', required: true, autocomplete: "off" %><br/>
<%= f.select :category, @categories %><br/>
Type an exact url:<br/>
<%= f.text_field :display, value: "" %><br/>
Or upload an image from your computer:<br/>
<%= f.file_field :display, placeholder: 'Display' %><br/>
<br/>
<%= submit_tag "âˆš", class: "btn btn-success" %>
<% end %>
