<div class="central-container form-offset internal-center">
<h5 class="warning-text">This process must be completed by a parent or legal guardian.</h5>
<h1 class="header-text">Get Started</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, placeholder: 'Email Address', class: "pkut-textbox" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "pkut-textbox" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password', class: "pkut-textbox" %>
  </div>

  <div class="center-block" style="width: 43%;"><%= recaptcha_tags %></div>

  <div class="actions">
    <%= f.submit "Next", class: 'pkut-btn' %><br />
    <%= link_to "Aready have an account?", new_session_path(resource_name), class: '' %>
  </div>
<% end %>
</div>
