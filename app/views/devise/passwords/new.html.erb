<div class="central-container fancy-box form-offset">
  <h3>Forgotten Password?</h3>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: "pkut-textbox" %>
    </div>

    <div class="actions">
      <%= f.submit "Submit", class: 'pkut-btn' %><br/>
      <%= link_to "Don't have an Account?", new_user_registration_path %>
    </div>
  <% end %>
</div>
