<div class="central-container form-offset">
  <h2>Login</h2>
  <br/>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: "pkut-textbox" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "pkut-textbox" %>
    </div>

    <%# if devise_mapping.rememberable? -%>
      <!-- <div class="field"> -->
        <%#= f.check_box :remember_me %>
        <%#= f.label :remember_me %>
      <!-- </div> -->
    <%# end -%>

    <div class="actions">
      <%= f.submit "Login", class: "pkut-btn" %><br/>
      <br/>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br/><br/>
      <%= link_to "Don't have an Account?", new_registration_path(resource_name) %><br/>
    </div>
  <% end %>
</div>
