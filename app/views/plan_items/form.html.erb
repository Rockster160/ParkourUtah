<div class="central-container form-offset">
  <%= link_to "Back to Dashboard", dashboard_path, class: 'pkut-btn' %><br/><br/>

  <%= form_for @plan do |f| %>
    <div class="form-container">
      <%= render partial: 'layouts/error_container', locals: { resource: @plan } %>

      <div class="form-field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "customRequired pkut-textbox" %>
      </div>

      <div class="">
        <div class="infinite-wrapper">
          <template>
            <div class="infinite-row">
              <input type="text" name="" placeholder="tag">
              <input type="text" name="" placeholder="count">
              interval
              <select class="" name="">
                <option value="day">day</option>
                <option value="week">week</option>
                <option value="month">month</option>
              </select>
            </div>
          </template>
          <div class="infinite-rows"></div>
        </div>

        <div class="infinite-wrapper">
          <template>
            <div class="infinite-row">
              <input type="text" name="" placeholder="tag">
              <input type="text" name="" placeholder="discount">
            </div>
          </template>
          <div class="infinite-rows"></div>
        </div>
      </div>

      <%= submit_tag "Submit", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
