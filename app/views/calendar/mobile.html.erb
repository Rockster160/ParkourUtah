<div class="mobile-calendar-controls internal-center">
  <span class="pkut-btn center-btn low-btn forceOpen" data-toggle="modal" data-target="#datepicker-modal">Goto</span>
</div>
<div class="modal fade" id="datepicker-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="central-container">
    <div class="error-container modal-date-picker-container center-block">
      <button type="button" class="close-btn error-close" data-dismiss="modal" aria-hidden="true"><%= icon("times-circle-o", '', class: 'fa-2x') %></button>
      <h1 class="pkut-header">Select Date</h1>
      <span class="mobile-date-picker internal-center"></span>
    </div>
  </div>
</div>

<div class="view-container" data-week-url="<%= calendar_week_path %>">
  <div class="load-previous"></div>
  <div class="weeks-container">
    <%= render partial: 'week', locals: {week: @week, date: @date} %>
  </div>
  <div class="load-next"></div>
</div>

<div class="loading-container" hidden></div>
