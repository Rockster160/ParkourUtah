<% content_for :body do %>
  <style>
    html, body {
      overflow: hidden;
    }
  </style>
<% end %>

<div class="view-container" data-month-url="<%= calendar_month_path %>">
  <div class="days-container">
    <% @months.each do |days| %>
      <div class="month-container month-<%= days.first.month %>">
        <% days.each do |day| %>
          <%= render partial: 'day', locals: {day: day, date: @date} %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="loading-container" hidden></div>
