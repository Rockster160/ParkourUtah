<div class="header-container" id="home">
  <div class="header vert">
    <div class="container">
      <%= image_tag('PKUT-full-color.png', class: 'img-responsive pkut-main center-block') %>
      <p class="lead">The place to be awesome</p>
      <div>&nbsp;</div>
      <a href="#about" class="btn btn-default btn-lg scroll-link">Get Started</a>
    </div>
  </div>
</div>


<hr>

<div id="about" class="blurb">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h1>Who we are</h1>
        <p class="lead">We are Parkour Utah and we like to jump over stuff!</p>
      </div>
      <div class="col-md-5">
        <h1 class="pull-right"><%= icon('male', '', class: 'fa-3x') %> <%= icon('long-arrow-right', '', class: 'fa-3x') %> <%= icon('random', '', class: 'fa-3x') %></h1>
      </div>
    </div>
  </div>
</div>

<div class="featurette" id="media">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h1>Videos</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 col-md-offset-2 text-center">
        <div class="featurette-item">
          <%= icon('rocket') %>
          <h4>Rocket</h4>
          <p>We'll get you up and going with our great classes!</p>
        </div>
      </div>
      <div class="col-md-2 text-center">
        <div class="featurette-item">
          <%= icon('magnet') %>
          <h4>Magnet</h4>
          <p>Become a chick magnet.</p>
        </div>
      </div>
      <div class="col-md-2 text-center">
        <div class="featurette-item">
          <%= icon('shield') %>
          <h4>Shield</h4>
          <p>We practice safety first!</p>
        </div>
      </div>
      <div class="col-md-2 text-center">
        <div class="featurette-item">
          <%= icon('pencil') %>
          <h4>Pencil</h4>
          <p>We don't use these at all!</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="callout" id="peeps">
  <div class="vert">
    <div class="col-md-12 text-center"><h2>Meet our people</h2></div>
    <div class="col-md-12 text-center">&nbsp;</div>
    <div class="col-md-8 col-md-offset-2 text-center">
      <div class="row hidden-xs">
        <div class="col-sm-2"><img class="img-circle grayscale" src="http://api.randomuser.me/portraits/thumb/women/12.jpg"></div>
        <div class="col-sm-2"><img class="img-circle grayscale" src="http://api.randomuser.me/portraits/thumb/men/95.jpg"></div>
        <div class="col-sm-2"><img class="img-circle grayscale" src="http://api.randomuser.me/portraits/thumb/women/67.jpg"></div>
        <div class="col-sm-2"><img class="img-circle grayscale" src="http://api.randomuser.me/portraits/thumb/men/27.jpg"></div>
        <div class="col-sm-2"><img class="img-circle grayscale" src="http://api.randomuser.me/portraits/thumb/women/15.jpg"></div>
        <div class="col-sm-2"><img class="img-circle grayscale" src="http://api.randomuser.me/portraits/thumb/men/18.jpg"></div>
        <!-- Display all mod avatars -->
        <div class="col-sm-2"><%= image_tag(current_user.avatar.url(:medium), class: "img-circle") %></div>
        <div class="col-sm-2"><%= image_tag(current_user.avatar_2.url(:medium), class: "img-circle") %></div>
      </div>
    </div>
  </div>
</div>

<div class="gallery" id="schedule">

  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h2>Locations</h2>
      <br>
    </div>
  </div>

  <div class="container well well-lg">
    <div class="row">
      <% @cities.each do |city| %>
        <div class="col-sm-3 col-xs-6">
          <div class="list-group">
            <%= link_to city, calendar_show_path(city), class: 'list-group-item' %>
          </div>
        </div>
      <% end %>
      </div>
    </div>

</div>

