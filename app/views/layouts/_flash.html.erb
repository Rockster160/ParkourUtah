<% inline ||= false %>
<div class="<%= inline ? 'inline-flash' : 'flash-banner' %> flash-<%= type %> <%= 'high-flash' if @high_flash %> ">
  <div class="flash-container">
    <% if type == 'alert' %>
      <i class="fas fa-ban"></i>
    <% elsif type == 'notice' %>
      <i class="far fa-check-circle"></i>
    <% end %>
    <%= message %>
    <div class="dismiss-flash">
      <a id="dismissFlash">
        <i class="far fa-times-circle"></i>
      </a>
    </div>
  </div>
</div>
