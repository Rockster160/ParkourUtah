<% content_for :modals do %>
  <div class="modal fade <%= additional_classes %>" id="<%= modal_id %>" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-container">
      <div class="modal-content">
        <button type="button" class="close-btn" data-bs-dismiss="modal" aria-hidden="true"><%= icon("far", "times-circle", '', class: 'fa-2x') %></button>
        <%= yield %>
      </div>
    </div>
  </div>
<% end %>

