<div class="flash-holder">
  <% if alert %>
  <div class="flash-container">
    <div class="flash alert"></div>
    <span class="flash-text"><%= alert %></span>
  </div>
  <% end %>
  <% if notice %>
  <div class="flash-container">
    <div class="flash notice"></div>
    <span class="flash-text"><%= notice %></span>
  </div>
  <% end %>
</div>
