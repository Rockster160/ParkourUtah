<% ['alert', 'notice'].each do |type| %>
  <% if message = flash.send(type) %>
    <%= render partial: 'layouts/flash', locals: { type: type, message: message } %>
  <% end %>
<% end %>
<% if params[:controller] == "index" && params[:action] == "index" && Announcement.current.present? %>
  <%= render partial: 'layouts/flash', locals: { type: 'announcement', message: Announcement.current.display } %>
<% end %>
