<% @text_messages.each do |text_message| %>
  <div class="text-message <%= text_message.from_instructor? ? 'sent' : 'received' %>">

    <div class="timestamp"><%= timeago(text_message.created_at) %></div>
    <% if text_message.from_instructor? %>
      <div class="from-name"><%= text_message.sender_name %></div>
    <% else %>
      <div class="from-name"><%= text_message.receiver_name %></div>
    <% end %>
    <div class="message-body"><%= text_message.body %></div>

  </div>
<% end %>
